<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorRojoOscuro"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:text="Registro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cattoo"
                android:textColor="@color/colorNegro"
                android:textSize="55dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="@drawable/fondo_manchas_pintura">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/nombreRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/apellidosRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/DNIRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="DNI"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/telefonoRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="Teléfono Móvil"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/contrasenaRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/ConfirmarContrasenaRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textColorHint="@color/colorNegro"
                android:alpha="0.7"
                android:background="@drawable/bordes"
                android:ems="10"
                android:hint="Confirmar contraseña"
                android:inputType="text"
                android:paddingStart="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonRegistrarse"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:alpha="0.95"
                android:textStyle="bold"
                android:background="@drawable/boton_custom1"
                android:text="Acceder" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorRojoOscuro"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>