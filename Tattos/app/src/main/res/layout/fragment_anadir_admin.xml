<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentAnadirAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombretatto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="25dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bordes"
            android:hint="Nombre Tatuaje"
            android:inputType="text" />

        <EditText
            android:id="@+id/categoriatatto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:background="@drawable/bordes"
            android:layout_marginTop="25dp"
            android:hint="Categoria"
            android:inputType="text" />

        <EditText
            android:id="@+id/descripciontatto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:background="@drawable/bordes"
            android:layout_marginTop="25dp"
            android:hint="Descripcion"
            android:inputType="text" />

        <EditText
            android:id="@+id/preciotatto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:background="@drawable/bordes"
            android:layout_marginTop="25dp"
            android:hint="Precio"
            android:inputType="text" />

        <Button
            android:id="@+id/botonSelectFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Seleccionar Foto" />

        <ImageView
            android:id="@+id/imagenTatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonAniadirTatuaje"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/boton_custom1"
            android:text="AÃ±adir tatuaje"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>