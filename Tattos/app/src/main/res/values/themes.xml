<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoTatto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrisAzulado</item> <!-- Color primario -->
        <item name="colorPrimaryVariant">@color/colorRojoClaro</item> <!-- Variante del color primario -->
        <item name="colorOnPrimary">@color/colorNegro</item> <!-- Color del texto sobre el color primario -->

        <item name="colorSurface">@color/colorGrisClaro</item> <!-- Color de la superficie -->
        <item name="colorOnSurface">@color/colorNegro</item> <!-- Color del texto sobre la superficie -->

        <item name="colorError">@color/colorRojoOscuro</item> <!-- Color de error -->
    </style>

    <style name="Theme.ProyectoTatto" parent="Base.Theme.ProyectoTatto" />

    <style name="Theme.ProyectoTatto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProyectoTatto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProyectoTatto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
